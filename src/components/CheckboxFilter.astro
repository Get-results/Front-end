---
const options = ["Option 1", "Option 2", "Option 3", "Option 4"];
const { selectedOptions = [], onChange } = Astro.props;
---

<div class="p-4 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Filtres</h2>
    <form class="flex flex-wrap items-center gap-4">
        {options.map(option => (
                <div class="flex items-center gap-2">
                    <input
                            id={`checkbox-${option}`}
                            type="checkbox"
                            value={option}
                            checked={selectedOptions.includes(option)}
                            onchange={(event) => onChange(event.target.value, event.target.checked)}
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600"
                    />
                    <label
                            for={`checkbox-${option}`}
                            class="text-sm font-medium text-gray-900 dark:text-gray-300"
                    >
                        {option}
                    </label>
                </div>
        ))}
    </form>
</div>
